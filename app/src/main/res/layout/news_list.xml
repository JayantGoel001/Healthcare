<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="8dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/background"
        app:cardCornerRadius="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:id="@+id/frame"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:adjustViewBounds="true">

                    <ImageView
                        android:id="@+id/image_news"
                        android:layout_width="match_parent"
                        android:layout_height="220dp"
                        android:contentDescription="@string/description"
                        android:scaleType="centerInside"
                        android:src="@drawable/placeholder"
                        android:transitionName="image" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="220dp"
                        android:contentDescription="@string/description"
                        android:scaleType="centerInside"
                        android:src="@drawable/bg_gradient" />

                </FrameLayout>

                <TextView
                    android:id="@+id/author"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/frame"
                    android:layout_alignBottom="@+id/frame"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="sans-serif-medium"
                    android:maxLines="1"
                    android:text="author and"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <ImageView
                    android:id="@+id/share"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="@string/description"
                    android:src="@drawable/share" />

                <LinearLayout
                    android:id="@+id/dateView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/frame"
                    android:layout_alignBottom="@+id/frame"
                    android:layout_marginEnd="6dp"
                    android:layout_marginBottom="6dp"
                    android:background="@drawable/bg_date"
                    android:orientation="horizontal"
                    android:paddingStart="2dp"
                    android:paddingTop="1dp"
                    android:paddingEnd="2dp"
                    android:paddingBottom="1dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="6dp"
                        android:contentDescription="@string/description"
                        android:src="@drawable/ic_today_black_24dp" />

                    <TextView
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="end"
                        android:layout_marginEnd="4dp"
                        android:gravity="center"
                        android:paddingTop="2dp"
                        android:paddingEnd="2dp"
                        android:paddingBottom="2dp"
                        android:textAllCaps="true"
                        android:textColor="#222"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:ignore="HardcodedText,RtlSymmetry"
                        tools:text="01 Jan 2019" />

                </LinearLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:padding="4dp"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold"
                android:transitionName="titleTransition"
                tools:text="Something is being seen" />

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:padding="4dp"
                android:textSize="18sp"
                tools:text="Something is being seen Something is beingin seen Something is being seen Something is being seen" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp">

                <TextView
                    android:id="@+id/source"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:text="Source" />

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/animation_view"
                    android:layout_width="55dp"
                    android:layout_height="45dp"
                    android:layout_alignEnd="@+id/source"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="3dp"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"/>

            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>